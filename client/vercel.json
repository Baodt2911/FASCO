{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/src/(.*)",
      "destination": "/src/$1"
    },
    {
      "source": "/components/(.*)",
      "destination": "/public/components/$1"
    },
    {
      "source": "/",
      "destination": "/public/pages/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/public/pages/$1"
    }
  ],
  "redirects": [
    {
      "source": "/public/pages/:path*",
      "destination": "/public/pages/:path*",
      "statusCode": 200
    },
    {
      "source": "/(.*)",
      "destination": "/public/pages/404.html",
      "statusCode": 404
    }
  ]
}
