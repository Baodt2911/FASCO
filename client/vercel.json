{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/pages/index.html"
    },
    {
      "src": "/account",
      "dest": "/public/pages/account.html"
    },
    {
      "src": "/address",
      "dest": "/public/pages/address.html"
    },
    {
      "src": "/cart",
      "dest": "/public/pages/cart.html"
    },
    {
      "src": "/checkout",
      "dest": "/public/pages/checkout.html"
    },
    {
      "src": "/forgot-password",
      "dest": "/public/pages/forgotPassword.html"
    },
    {
      "src": "/orders",
      "dest": "/public/pages/orders.html"
    },
    {
      "src": "/product-detail",
      "dest": "/public/pages/productDetail.html"
    },
    {
      "src": "/shop",
      "dest": "/public/pages/shop.html"
    },
    {
      "src": "/signin",
      "dest": "/public/pages/signIn.html"
    },
    {
      "src": "/signup",
      "dest": "/public/pages/Signup.html"
    },
    {
      "src": "/404",
      "dest": "/public/pages/404.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/pages/404.html"
    }
  ],
  "outputDirectory": "public"
}
